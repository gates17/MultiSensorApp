@model Role

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<form method="post" asp-controller="Role" asp-action="Delete">
    <div class="border m-2 p-4 formcreate">
        <h2>
            Delete Role
        </h2>

        <div asp-validation-summary="All"></div>

        <div class="container overflow-hidden">
            <div class="row gy-5">

              
                <div class="form-group col-md-6">
                    <label for="contact">Id</label>
                    <input type="text" class="form-control" id="contact" placeholder="Id" disabled>
                </div>

                <div class="col-md-6">
                    <label for="select1">Type of Role</label>
                    <select class="form-select" id="select1" aria-label="Default select example"disabled>
                        <option selected>Choose an option</option>
                        <option value="1">SuperUser</option>
                        <option value="2">Administrator</option>
                        <option value="3">Manager</option>
                        <option value="3">Office</option>
                        <option value="3">Maintenance Tech</option>
                    </select>
                </div>
          
                <div class="form-group col-md-12">
                    <label for="contact">Description</label>
                    <input type="text" class="form-control" id="contact" placeholder="Insert a Description" disabled>
                </div>

                <div class="form-check">
                    <input onclick="EnableButton(flexCheckDefault)" class="form-check-input" type="checkbox" value="" id="flexCheckDefault">
                    <label class="form-check-label" for="flexCheckDefault">
                    Confirm that you want to Delete this Role.
                    </label>
                </div>

                <div>
                    <button id="DeleteButton" type="submit" class="btn btn-danger" disabled>Delete</button>
                    <a asp-controller="Role" asp-action="Index" class="btn btn-secondary">Cancel</a>
                </div>

            </div>
         </div>        
    </div>
</form>

@section Scripts {
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}

