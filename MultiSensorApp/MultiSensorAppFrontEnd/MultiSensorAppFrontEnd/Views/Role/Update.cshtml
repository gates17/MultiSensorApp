@model Role

@{
    ViewData["Title"] = "Update";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<form method="post" asp-controller="Role" asp-action="Update">
    <div class="border m-2 p-4 formcreate">
        <h2>
            Update Role
        </h2>

        <div asp-validation-summary="All"></div>

        <div class="container overflow-hidden">
            <div class="row gy-5">

                <div class="form-group col-md-6">
                    <label for="contact">Id</label>
                    <input type="text" class="form-control" id="contact" placeholder="Id" disabled>
                </div>

                <div class="col-md-6">
                    <label for="select1">Type of Role</label>
                    <select class="form-select" id="select1" aria-label="Default select example">
                        <option selected>Choose an option</option>
                        <option value="1">SuperUser</option>
                        <option value="2">Administrator</option>
                        <option value="3">Manager</option>
                        <option value="3">Office</option>
                        <option value="3">Maintenance Tech</option>
                    </select>
                </div>
          
                <div class="form-group col-md-12">
                    <label for="contact">Description</label>
                    <input type="text" class="form-control" id="contact" placeholder="Insert a Description">
                </div>

                <div>
                    <button type="submit" class="btn btn-success">Update</button>
                    <a asp-controller="Role" asp-action="Index" class="btn btn-secondary">Cancel</a>
                </div>

            </div>
         </div>        
    </div>
</form>

@section Scripts {
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}